body
	font  13px/18px 'Arial', 'Lucida Grande', sans-serif
	color #000

a
	text-decoration none

h2
	font-family    'Noto Sans', sans-serif
	font-size      24px
	text-transform uppercase
	margin-bottom  30px

h3
	font-family 'Georgia', sans-serif
	color       #d15c09
	font-size   22px
	clear both

p + h3
	margin-top 40px

.quote
	color $blue_link
	font-family 'Georgia', sans-serif
	font-size 18px
.attr
	font-style italic
	color      #666

.cl
	clearfix()

.last-of-page
	margin-bottom 50px
	
.last-of-page a img
	margin-right 10px
	margin-bottom 30px
	margin-top 10px
	float right

blockquote
	padding-left  20px
	border-left   solid 3px $gold
	clear         both
	margin-bottom 30px
	margin-left   0

	& > p
		margin-bottom 10px

cite
	font-weight bold
	font-style  normal

.header-wrap
	clearfix()
	padding 20px 0

	&.home
		padding 0

	& > h2
		float left
	& > a
		float      right
		color      $blue_link
		margin-top 25px

.container
	max-width 970px
	margin    0 auto

.bg-top-nav
	background    $blue
	border-bottom 1px solid $blue_darkest

	& > .container
		overflow hidden
		padding  24px 0 20px

.bg-nav
	background $blue_dark
	box-shadow inset 0 1px 3px rgba(48, 48, 48, 0.82)

.bg-slideshow
	background linear-gradient(to right, #eef8ff 0%, #e4f5fe 30%, #e3f4fe 50%, #4ca9e2 50%, #4ca9e2 100%)

.bg-footer
	background linear-gradient(#0b2e42, #053d61)
