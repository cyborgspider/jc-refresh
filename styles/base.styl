body
	font  13px/18px 'Arial', 'Lucida Grande', sans-serif
	color #000

a
	text-decoration none

h2
	font-family    'Noto Sans', sans-serif
	font-size      24px
	text-transform uppercase
	margin-bottom  30px

.cl
	clearfix()

.header-wrap
	clearfix()

	& > h2
		float left
	& > a
		float      right
		color      $blue_link
		margin-top 25px

.container
	max-width 970px
	margin    0 auto

.bg-top-nav
	background    $blue
	border-bottom 1px solid $blue_darkest

	& > .container
		overflow hidden
		padding  24px 0 20px

.bg-nav
	background $blue_dark
	box-shadow inset 0 1px 3px rgba(48, 48, 48, 0.82)

.bg-slideshow
	background linear-gradient(to right, #eef8ff 0%, #eef8ff 30%, #d4ebfa 50%, #4ca9e2 50%, #4ca9e2 100%)

.bg-footer
	background linear-gradient(#0b2e42, #053d61)
