.footer
	padding   25px 0
	overflow  hidden
	color     white
	font-size 12px

.footer-left
	column(2/3)
	border-right solid 1px #0c558d
	box-sizing   border-box

.footer-right
	column(1/3)

.input-text
	color        #5a5a5a
	width        206px
	height       22px
	padding-left 6px
	float        left
	margin-right 6px
	line-height  22px

.input-submit
	box-shadow none
	border     none
	background $blue_link
	width      79px
	height     28px
	text-align center
	color      #fff
	float      left

.social
	margin-top 20px

	& > p
		display inline-block
	& > a
		display inline-block
		margin-left 8px
