.locations-sidebar
	column(1/3)

.locations-list
	& > li
		padding    1rem 2rem 2rem
		list-style none
		color      #fff
		background #65564D
		position   relative

		&:nth-child(1)
			background #E1722F

		&:nth-child(2)
			background #A2653E

	& > li > h2
		font 18px Georgia, "Times New Roman", serif
		margin-bottom 1rem

	& > li > p
		margin-top    0
		margin-bottom 5px

	& > li > a
		position   absolute
		color      #fff
		width      67px
		height     20px
		background #000
		right      10px
		bottom     0
		text-align center
		display    block

.contact-form
	column(2/3)

	& > h3
		line-height 32px

	& > h3 + p
			padding       0 1rem 1rem 0
			border-bottom dotted 1px #5a5a5a
			margin-bottom 1rem

.req
	color #e37222

.form
	clearfix()
	margin     0
	padding    0
	list-style none

	& > li
		column(1/2, cycle:2)
		margin-bottom 1rem

		&.cl
			width 100%

	label
		display block

	input[type='text']
		background    linear-gradient(#F4FCFD, #fff)
		border        1px solid #B5C9DB
		border-radius 2px
		padding-left  5px
		width         100%
		height        29px
		display       block

	textarea
		background linear-gradient(#F4FCFD, #fff)
		border        1px solid #B5C9DB
		border-radius 2px
		padding    5px 0 5px 5px
		width      100%
		height     151px

	select
		width  100%
		height 29px
		margin 8px 0

.actions
	text-align right

	input[type='submit']
		background  #0069bd
		width       81px
		height      27px
		font-weight bold
		color       #fff
		cursor      pointer
		float       right
		margin-left 13px
		border      none

		&:hover
			text-decoration underline

.reset
	background  #000
	width       81px
	height      27px
	font-weight bold
	color       #fff
	cursor      pointer
	float       right
	text-align  center
	line-height 30px
