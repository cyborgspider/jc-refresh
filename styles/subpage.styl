.crumb
	text-align right
	margin-top 25px

.subnav
	& > a
		padding     8px 12px
		color       #000
		transition  background-color 0.2s ease-in-out
		background  transparent
		font-weight normal
		display     inline-block

		&:hover
		&.active
			background  $blue
			color       white
			font-weight 700
			padding 8px 11px

.subpage-intro
	padding       1em 2em 2em
	background    $blue
	overflow      hidden
	margin-bottom 30px

	& > p
		width       60%
		float       left
		font-family 'Georgia', serif
		font-size   20px
		color       white
		line-height 1.5

	& > img
		float      right
		margin-top 10px

.testimonial-section
	clearfix()
	margin     0
	padding    0
	list-style none
	
	& > li
		background $blue
		color      white
		padding    2em
		overflow   hidden
		
		&:nth-child(even)
			background white
			color      #000
			
			& > .right-col > cite
				border-color #ccc
		
	& > li > .left-col
		column(1/4)
		text-align center
		
	& > li > .left-col > p
		margin 0
	
	& > li > .right-col
		column(3/4)
		
	& > li > .right-col > p	
		text-indent -.4em
		margin 0 0 1em
		
	& > li > .right-col > cite
		display     block
		border-top  solid 1px white
		font-style  italic	
		text-align  right
		padding-top 1em	


.image-list
	width  100%
	margin 20px auto 50px
	clear  both

	clearfix()

	& > img
		margin-right 10px
		margin-bottom 10px

		&:nth-child(4n)
			margin-right 0

.page-container
	clearfix()
	padding 0 0 50px

.sidebar
	column(1/3)
	padding    1em 2em 2em
	border     3px solid $blue
	background white
	box-sizing border-box

	a
		color           $blue_link
		text-decoration underline

	& > h4
		font-size 18px
		margin    1em 0 1.5em

	& > ul
		list-style  none
		margin      0
		padding     0
		color       $blue

	& > ul > li
		line-height   1.7
		margin-bottom 1em
		text-indent   -1em
		padding-left  1em

		&:before
			content '\00BB \0020'

.page-content
	column(2/3)
